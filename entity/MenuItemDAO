package entity;

import core.DB;
import java.sql.*;
import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

/**
 * MenuItemDAO - Data Access Object for MenuItem entities
 *
 * Handles all database operations for menu items:
 * - CRUD operations (Create, Read, Update, Delete)
 * - Custom queries (get by category, get all categories)
 */
public class MenuItemDAO implements DAO<MenuItem> {

    /**
     * Get a single menu item by ID
     */
    @Override
    public Optional<MenuItem> get(int id) {
        DB db = DB.getInstance();
        try {
            // Use PreparedStatement to prevent SQL injection
            String sql = "SELECT * FROM MenuItem WHERE id = ?";
            PreparedStatement stmt = db.getPreparedStatement(sql);
            stmt.setInt(1, id);  // Set the ? to the id value

            ResultSet rs = stmt.executeQuery();

            // If a result was found, create MenuItem from the row
            if (rs.next()) {
                MenuItem item = new MenuItem(
                        rs.getInt("id"),
                        rs.getString("name"),
                        rs.getDouble("price"),
                        rs.getString("category")
                );
                return Optional.of(item);
            }
        } catch (SQLException e) {
            System.err.println("Error getting menu item: " + e.getMessage());
        }
        return Optional.empty();  // Not found
    }

    /**
     * Get all menu items, ordered by category and name
     */
    @Override
    public List<MenuItem> getAll() {
        DB db = DB.getInstance();
        List<MenuItem> items = new ArrayList<>();

        try {
            String sql = "SELECT * FROM MenuItem ORDER BY category, name";
            ResultSet rs = db.executeQuery(sql);

            // Loop through all rows
            while (rs.next()) {
                MenuItem item = new MenuItem(
                        rs.getInt("id"),
                        rs.getString("name"),
                        rs.getDouble("price"),
                        rs.getString("category")
                );
                items.add(item);
            }
        } catch (SQLException e) {
            System.err.println("Error getting all menu items: " + e.getMessage());
        }
        return items;
    }

    /**
     * Get all menu items in a specific category
     * This is a custom method (not part of DAO interface)
     */
    public List<MenuItem> getByCategory(String category) {
        DB db = DB.getInstance();
        List<MenuItem> items = new ArrayList<>();

        try {
            String sql = "SELECT * FROM MenuItem WHERE category = ? ORDER BY name";
            PreparedStatement stmt = db.getPreparedStatement(sql);
            stmt.setString(1, category);
            ResultSet rs = stmt.executeQuery();

            while (rs.next()) {
                MenuItem item = new MenuItem(
                        rs.getInt("id"),
                        rs.getString("name"),
                        rs.getDouble("price"),
                        rs.getString("category")
                );
                items.add(item);
            }
        } catch (SQLException e) {
            System.err.println("Error getting menu items by category: " + e.getMessage());
        }
        return items;
    }

    /**
     * Insert a new menu item into the database
     * The item's ID will be auto-generated by the database
     */
    @Override
    public void insert(MenuItem item) {
        DB db = DB.getInstance();
        try {
            // ID is auto-generated, so we don't include it in INSERT
            String sql = "INSERT INTO MenuItem (name, price, category) VALUES (?, ?, ?)";
            PreparedStatement stmt = db.getPreparedStatement(sql);

            stmt.setString(1, item.getName());
            stmt.setDouble(2, item.getPrice());
            stmt.setString(3, item.getCategory());

            int rowsInserted = stmt.executeUpdate();
            if (rowsInserted > 0) {
                System.out.println("Menu item inserted successfully!");
            }
        } catch (SQLException e) {
            System.err.println("Error inserting menu item: " + e.getMessage());
        }
    }

    /**
     * Update an existing menu item in the database
     * All fields are updated based on the item object's values
     */
    @Override
    public void update(MenuItem item) {
        DB db = DB.getInstance();
        try {
            String sql = "UPDATE MenuItem SET name=?, price=?, category=? WHERE id=?";
            PreparedStatement stmt = db.getPreparedStatement(sql);

            stmt.setString(1, item.getName());
            stmt.setDouble(2, item.getPrice());
            stmt.setString(3, item.getCategory());
            stmt.setInt(4, item.getId());

            int rowsUpdated = stmt.executeUpdate();
            if (rowsUpdated > 0) {
                System.out.println("Menu item updated successfully!");
            }
        } catch (SQLException e) {
            System.err.println("Error updating menu item: " + e.getMessage());
        }
    }

    /**
     * Delete a menu item from the database
     */
    @Override
    public void delete(MenuItem item) {
        DB db = DB.getInstance();
        try {
            String sql = "DELETE FROM MenuItem WHERE id = ?";
            PreparedStatement stmt = db.getPreparedStatement(sql);
            stmt.setInt(1, item.getId());

            int rowsDeleted = stmt.executeUpdate();
            if (rowsDeleted > 0) {
                System.out.println("Menu item deleted successfully!");
            }
        } catch (SQLException e) {
            System.err.println("Error deleting menu item: " + e.getMessage());
        }
    }

    /**
     * Get all unique categories from menu items
     * Useful for populating category filter dropdowns
     */
    public List<String> getCategories() {
        DB db = DB.getInstance();
        List<String> categories = new ArrayList<>();

        try {
            String sql = "SELECT DISTINCT category FROM MenuItem ORDER BY category";
            ResultSet rs = db.executeQuery(sql);

            while (rs.next()) {
                categories.add(rs.getString("category"));
            }
        } catch (SQLException e) {
            System.err.println("Error getting categories: " + e.getMessage());
        }
        return categories;
    }
}
